<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.leo.electricity.fragment.HomeFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/ad_viewpager"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true">
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp">
        <View
            android:id="@+id/dot0"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:background="@drawable/dot_color"/>
        <View
            android:id="@+id/dot1"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:background="@drawable/dot"/>
        <View
            android:id="@+id/dot2"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:background="@drawable/dot"/>
        <View
            android:id="@+id/dot3"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:background="@drawable/dot"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/check_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad_viewpager"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:showDividers="middle"
        android:padding="6dp">

        <Button
            android:id="@+id/electricityAndCharge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_shape4"
            android:button="@null"
            android:drawableTop="@drawable/power_charge"
            android:drawablePadding="9dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="电量电费"
            android:textSize="10sp"
            android:layout_marginRight="3dp"
            android:textColor="@color/colorPrimaryDark"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/bill"
            android:drawablePadding="9dp"
            android:text="购电记录"
            android:textSize="10sp"
            android:padding="12dp"
            android:background="@drawable/button_shape4"
            android:layout_marginRight="3dp"
            android:textColor="@color/colorPrimaryDark" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/notice"
            android:drawablePadding="9dp"
            android:text="停电公告"
            android:textSize="10sp"
            android:padding="12dp"
            android:background="@drawable/button_shape4"
            android:layout_marginRight="3dp"
            android:textColor="@color/colorPrimaryDark"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/check"
            android:drawablePadding="9dp"
            android:text="用户查询"
            android:padding="12dp"
            android:textSize="10sp"
            android:background="@drawable/button_shape4"
            android:layout_marginRight="3dp"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buy_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/check_linear"
        android:background="#ffffff">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/editshape"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="请选择缴费地区"
            android:textColorHint="#d2d2d2"
            android:textSize="13sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/editshape"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="请输入客户编号"
            android:textColorHint="#d2d2d2"
            android:textSize="13sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="265dp"
            android:background="@drawable/electricty_button_shape"
            android:layout_marginTop="10dp"
            android:text="购 电"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/buy_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/question"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/question"/>
            <TextView
                android:id="@+id/question_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户编号"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/question"
                android:textStyle="bold"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="如何获取 >"
                android:textSize="8sp"
                android:layout_below="@+id/question_text1"
                android:layout_toRightOf="@+id/question"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
           >
            <ImageView
                android:id="@+id/bindimage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/question"/>
            <TextView
                android:id="@+id/bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定户号"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/bindimage"
                android:textStyle="bold"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用电尽在掌握 >"
                android:textSize="8sp"
                android:layout_below="@+id/bind"
                android:layout_toRightOf="@+id/bindimage"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
