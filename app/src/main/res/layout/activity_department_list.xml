<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.leo.electricity.activity.service.DepartmentListActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:src="@drawable/back2"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/server_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="网点" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/department_linear"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_below="@+id/back_Image"
        android:background="@drawable/spinner_shape">
        <TextView
            android:id="@+id/department_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="选择管理单位:"
            android:gravity="center_vertical"
            android:textSize="8sp"
            android:layout_marginLeft="2dp"/>
        <ImageButton
            android:id="@+id/popup_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/down"
            android:background="#ffffff"/>
    </LinearLayout>
</LinearLayout>
    <ListView
        android:id="@+id/serverPoint_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:minHeight="80dp"/>
</LinearLayout>
